{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "contection-viewport": ["../modules/viewport/src/index.tsx"],
      "contection-viewport/*": ["../modules/viewport/*"],
      "contection-top-layer": ["../modules/top-layer/src/index.tsx"],
      "contection-top-layer/*": ["../modules/top-layer/*"],
      "contection-storage-adapter": ["../adapters/storage/src/index.ts"],
      "contection-storage-adapter/*": ["../adapters/storage/*"],
      "contection-next-cookie-adapter": ["../adapters/next-cookie/src/index.ts"],
      "contection-next-cookie-adapter/*": ["../adapters/next-cookie/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
