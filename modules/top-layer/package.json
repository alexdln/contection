{
  "name": "contection-top-layer",
  "version": "1.0.0",
  "description": "A layer management module built on top of contection. Provides efficient management of dialogs and upper layers with granular subscriptions, type safety, and support for isolated layers.",
  "keywords": [
    "contection",
    "layer",
    "dialog",
    "isolated-layers",
    "top-layer",
    "react",
    "next",
    "modal",
    "notifications"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc --project tsconfig.esm.json",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/alexdln/contection.git"
  },
  "author": {
    "name": "Alex Savelyev",
    "email": "dev@alexdln.com",
    "url": "https://github.com/alexdln/"
  },
  "devDependencies": {
    "@types/react": "19.2.2",
    "contection": "1.4.2",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "contection": ">=1.4.0",
    "react": ">= 19.0.0"
  },
  "license": "MIT"
}
